<?xml version="1.0" encoding="utf-8"?>
<com.toin.glp.widget.FlowRadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_action_bar_bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_height"
    android:background="@color/action_color_black"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_5">

    <RadioButton
        android:id="@+id/rb_home"
        style="@style/foot_bar"
        android:checked="false"
        android:drawableTop="@drawable/menu_home_seletor"
        android:text="@string/home" />

    <RadioButton
        android:id="@+id/rb_account"
        style="@style/foot_bar"
        android:drawableTop="@drawable/menu_account_seletor"
        android:text="@string/account" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RadioButton
            android:id="@+id/rb_message"
            style="@style/foot_bar"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/menu_message_seletor"
            android:text="@string/message" />

        <ImageView
            android:id="@+id/tv_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@mipmap/red_point"
            android:visibility="gone" />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/rb_mine"
        style="@style/foot_bar"
        android:checked="false"
        android:drawableTop="@drawable/menu_mine_seletor"
        android:text="@string/mine" />


</com.toin.glp.widget.FlowRadioGroup>