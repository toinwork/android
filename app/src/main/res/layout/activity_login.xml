<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_logo" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_header"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/white"
        android:divider="@drawable/vertical_line"
        android:orientation="vertical"
        android:showDividers="middle">


        <LinearLayout
            android:id="@+id/ll_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:hint="@string/hint_username"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/gray_hint"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/comment_textSize" />

            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_cancel"
                android:padding="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@mipmap/cancel"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_username"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:hint="@string/hint_pwd"
                android:inputType="textPassword"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/gray_hint"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/comment_textSize" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_password"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:text="@string/code"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="@dimen/dp_5"
                android:hint="@string/hint_code"
                android:inputType="textPassword"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:textColorHint="@color/gray"
                android:textSize="@dimen/comment_textSize" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        style="@style/line"
        android:layout_below="@+id/ll_login"
        android:layout_marginLeft="@dimen/dp_20" />

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/black"
        android:textSize="@dimen/comment_textSize"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_login"
        style="@style/common_button_two"
        android:layout_below="@+id/tv_code"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_50"
        android:text="@string/login" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:text="@string/no_register"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/forget_password"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_size_14" />
</RelativeLayout>
