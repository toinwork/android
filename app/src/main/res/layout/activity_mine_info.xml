<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_action_title_mine" />

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white">

        <TextView
            android:id="@+id/face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:text="@string/face"
            android:textColor="@color/black"
            android:textSize="@dimen/comment_textSize" />

        <com.toin.glp.widget.circleImageView.CircleImageView
            android:id="@+id/img_header"
            android:layout_width="@dimen/circle_header_img"
            android:layout_height="@dimen/circle_header_img"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tag1"
            android:src="@mipmap/header" />

        <ImageView
            android:id="@+id/tag1"
            style="@style/more_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/white"
        android:divider="@drawable/vertical_line"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tag2"
                android:singleLine="true"
                android:text="hanbin"
                android:textColor="@color/gray"
                android:textSize="@dimen/comment_textSize" />

            <ImageView
                android:id="@+id/tag2"
                style="@style/more_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/sex"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tag3"
                android:singleLine="true"
                android:text="男"
                android:textColor="@color/gray"
                android:textSize="@dimen/comment_textSize" />

            <ImageView
                android:id="@+id/tag3"
                style="@style/more_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/job"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tag4"
                android:singleLine="true"
                android:text="android开发"
                android:textColor="@color/gray"
                android:textSize="@dimen/comment_textSize" />

            <ImageView
                android:id="@+id/tag4"
                style="@style/more_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp_10"
                android:text="@string/mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/comment_textSize" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toLeftOf="@+id/tag5"
                android:singleLine="true"
                android:text="18757110824"
                android:textColor="@color/gray"
                android:textSize="@dimen/comment_textSize" />

            <ImageView
                android:id="@+id/tag5"
                style="@style/more_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>