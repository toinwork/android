<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        android:background="@color/action_color"
        android:gravity="center_vertical">

        <RadioGroup
            android:id="@+id/title_group"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/invest_header_bg_shape"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_msg_not_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/subtitle_left_bg_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/not_read"
                android:textColor="@drawable/subtitle_text_color_selector"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/rb_msg_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/subtitle_right_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/read"
                android:textColor="@drawable/subtitle_text_color_selector"
                android:textSize="16sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <cn.bingoogolapple.bgabanner.BGAViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/ll_go_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_50"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/blank1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/go_login_to_look"
                android:textColor="@color/border_gray"
                android:textSize="@dimen/comment_textSize" />


            <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/shape_login_action"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30"
                android:paddingTop="@dimen/dp_10"
                android:text="@string/go_login"
                android:textColor="@color/action_color" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>