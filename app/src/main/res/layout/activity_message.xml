<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_height"
        android:background="@color/action_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/action_height"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/menu" />

        <RadioGroup
            android:id="@+id/title_group"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/invest_header_bg_shape"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_msg_not_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/subtitle_left_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/not_read"
                android:checked="true"
                android:textSize="16sp"
                android:textColor="@drawable/subtitle_text_color_selector"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <RadioButton
                android:id="@+id/rb_msg_read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/subtitle_right_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/read"
                android:textSize="16sp"
                android:textColor="@drawable/subtitle_text_color_selector"/>
        </RadioGroup>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>