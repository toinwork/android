<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/account_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_height">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:src="@mipmap/action_back"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_action_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toLeftOf="@+id/rl_share"
                android:layout_toRightOf="@+id/btn_back"
                android:gravity="center"
                android:maxLength="7"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/action_title" />

            <RelativeLayout
                android:id="@+id/rl_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <ImageButton
                    android:id="@+id/img_share"
                    android:layout_width="@dimen/action_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/action_back_selector"
                    android:src="@mipmap/setting"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/action_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/account_money"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:text="账单总额(元)"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-5dp"
            android:background="@mipmap/account_info"
            android:gravity="center"
            android:textColor="@color/action_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/edit_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:divider="@drawable/vertical_line"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:showDividers="middle">

            <RelativeLayout
                android:id="@+id/rl_repay_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/repay_plan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />


                <ImageView
                    style="@style/more_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <!--<RelativeLayout-->
                <!--android:id="@+id/rl_loan_contract"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/white">-->

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_margin="@dimen/dp_10"-->
                    <!--android:text="@string/loan_contract"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="@dimen/comment_textSize" />-->


                <!--<ImageView-->
                    <!--style="@style/more_tag"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            <!--</RelativeLayout>-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/edit_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:divider="@drawable/vertical_line"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_15"
            android:showDividers="middle">

            <RelativeLayout
                android:id="@+id/rl_loan_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/loan_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />


                <TextView
                    android:id="@+id/tv_repay_money"
                    style="@style/style_repay_item" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_contract_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/contract_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />


                <TextView
                    android:id="@+id/tv_contract_time"
                    style="@style/style_repay_item" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_repay_way"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/repay_way"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />


                <TextView
                    android:id="@+id/tv_repay_way"
                    style="@style/style_repay_item" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_all_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dp_10"
                    android:text="@string/all_interest"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />

                <TextView
                    android:id="@+id/tv_all_interest"
                    style="@style/style_repay_item" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>