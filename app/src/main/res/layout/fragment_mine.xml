<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_action_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/rl_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.toin.glp.widget.circleImageView.CircleImageView
                    android:layout_width="@dimen/circle_header_img"
                    android:layout_height="@dimen/circle_header_img"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:scaleType="centerCrop"
                    android:src="@color/gray" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="hanbin"
                    android:textColor="@color/black"
                    android:textSize="@dimen/comment_textSize" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/arrow" />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/white">

                <TextView
                    style="@style/tv_mine_two"
                    android:text="接收通知" />

                <com.toin.glp.widget.SlideSwitch
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    slideswitch:isOpen="false"
                    slideswitch:shape="circle"
                    slideswitch:themeColor="@color/action_color" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/white"
                android:divider="@drawable/vertical_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <RelativeLayout
                    android:id="@+id/rl_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_mine_two"
                        android:text="@string/company_information" />

                    <ImageView style="@style/more_tag" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_modify_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_mine_two"
                        android:text="@string/change_password" />

                    <ImageView style="@style/more_tag" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_mine_two"
                        android:text="@string/feedback" />

                    <ImageView style="@style/more_tag" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_about_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/tv_mine_two"
                        android:text="@string/about_us" />

                    <ImageView style="@style/more_tag" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_exit"
                style="@style/style_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:text="@string/safe_exit" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>